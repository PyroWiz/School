namespace ConsoleApp1
{
    public static class Exs
    {
        public static int Ex1()
        {
            // compute product of odd numbers from n down to 1
            return One(10, 1);

            static int One(int n, int multi)
            {
                if (n == 0) return multi;
                if (n % 2 != 0) multi *= n;
                return One(n - 1, multi);
            }
        }
    }
}
